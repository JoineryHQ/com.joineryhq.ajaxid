<?xml version="1.0"?>
<extension key="com.joineryhq.ajaxid" type="module">
  <file>ajaxid</file>
  <name>AJAX API Identifier</name>
  <description>Simple utility extension to flag all CivCRM AJAX API calls with an easily identifiable data payload object member.</description>
  <license>GPL-3.0</license>
  <authors>
    <author>
      <name>Allen Shaw</name>
      <email>allen@JoineryHQ.com</email>
      <role>Maintainer</role>
    </author>
  </authors>
  <urls>
    <url desc="Main Extension Page">https://github.com/JoineryHQ/com.joineryhq.ajaxid</url>
    <url desc="Documentation">https://github.com/JoineryHQ/com.joineryhq.ajaxid</url>
    <url desc="Support">https://github.com/JoineryHQ/com.joineryhq.ajaxid/issues</url>
    <url desc="Licensing">https://www.gnu.org/licenses/gpl-3.0.html</url>
  </urls>
  <releaseDate>2025-10-15</releaseDate>
  <version>1.0.0</version>
  <develStage>stable</develStage>
  <compatibility>
    <ver>6.4</ver>
  </compatibility>
  <comments>Modifies CiviCRM AJAX API calls by adding a data field to the payload (see linked documentation)</comments>
  <classloader>
    <psr0 prefix="CRM_" path="."/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <civix>
    <namespace>CRM/Ajaxid</namespace>
    <format>25.01.1</format>
    <angularModule>crmAjaxid</angularModule>
  </civix>
  <mixins>
    <mixin>mgd-php@1.0.0</mixin>
    <mixin>setting-php@1.0.0</mixin>
    <mixin>smarty@1.0.3</mixin>
  </mixins>
</extension>
